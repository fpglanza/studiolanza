---
const { project } = Astro.props;
---
<article class="group">
  <button
    type="button"
    class="w-full cursor-pointer text-left rounded-xl border border-zinc-200 bg-white/60 p-6 md:p-7 transition hover:border-zinc-300"
    data-project={project.slug}
  >
    <div class="flex flex-col gap-3">
      <div class="flex flex-wrap items-baseline gap-x-3 gap-y-1">
        <h3 class="text-lg md:text-xl font-medium tracking-tight">
          {project.title}
        </h3>
        {project.client && <p class="text-sm text-zinc-600">{project.client}</p>}
      </div>

      <p class="text-sm leading-relaxed text-zinc-700 max-w-2xl">
        {project.excerpt}
      </p>

      <div class="flex flex-wrap gap-2 pt-2">
        {(project.tags ?? []).map((t) => (
          <span class="text-xs text-zinc-600 border border-zinc-200 rounded-full px-3 py-1">
            {t}
          </span>
        ))}
      </div>
    </div>
  </button>
</article>
