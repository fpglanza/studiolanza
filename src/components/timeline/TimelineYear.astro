---
import TimelineProjectCard from "./TimelineProjectCard.astro";
const { year, projects } = Astro.props;
---
<section
  data-year={year}
  data-reveal
  class="grid grid-cols-1 gap-8"
>
  <div class="relative pl-8 md:pl-0">
    <span class="absolute left-[10px] top-2 h-2 w-2 rounded-full bg-zinc-900 md:hidden"></span>
    <h2 class="text-xl md:text-2xl font-medium tracking-tight">{year}</h2>
  </div>

  <div class="space-y-10 md:space-y-12">
    {projects.map((p) => <TimelineProjectCard project={p} />)}
  </div>
</section>
