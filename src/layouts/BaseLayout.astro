---
import "../styles/global.css";
import "../styles/lightbox.css";
const { title = "studiolanza" } = Astro.props;
---
<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-zinc-50 text-zinc-900 antialiased">
    <header class="py-10">
      <div class="mx-auto w-full max-w-5xl px-6 md:px-10">
        <nav class="flex items-center justify-between">
          <a href="/" class="text-sm tracking-wide text-zinc-800 hover:text-zinc-950">
            studiolanza
          </a>

          <div class="flex items-center gap-5">
            <a href="/archivio" class="text-sm text-zinc-700 hover:text-zinc-900">
              Archivio
            </a>
            <a href="/contatti" class="text-sm text-zinc-700 hover:text-zinc-900">
              Contatti
            </a>
          </div>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="py-14">
      <div class="mx-auto w-full max-w-5xl px-6 md:px-10">
        <div class="flex flex-col gap-2 text-sm text-zinc-600">
          <p>studiolanza — immagine e comunicazione</p>
          <p>
            <a class="hover:text-zinc-900" href="mailto:ciao@studiolanza.it">ciao@studiolanza.it</a>
            <span class="mx-2">·</span>
            Italia
            <span class="mx-2">·</span>
            {new Date().getFullYear()}
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
