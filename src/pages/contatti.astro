---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../components/layout/Container.astro";
---
<BaseLayout title="studiolanza — contatti">
  <main class="py-24 md:py-32">
    <Container>
      <header class="max-w-2xl">
        <p class="text-sm tracking-wide text-zinc-600">contatti</p>
        <h1 class="mt-3 text-3xl md:text-5xl font-medium tracking-tight">
          studiolanza
        </h1>
        <p class="mt-6 text-base md:text-lg leading-relaxed text-zinc-700">
          Per collaborazioni e richieste, scrivici. Rispondiamo con calma, ma rispondiamo.
        </p>
      </header>

      <section class="mt-12 text-sm text-zinc-700">
        <div class="space-y-3">
          <p>
            Email:
            <a class="text-zinc-900 hover:underline" href="mailto:ciao@studiolanza.it">ciao@studiolanza.it</a>
          </p>
          <p>Telefono: <span class="text-zinc-900">+39 ...</span></p>
          <p>Città: <span class="text-zinc-900">Italia</span></p>
        </div>

        <p class="mt-10 text-xs text-zinc-500">
          Nessun form, nessuna newsletter. Solo contatti diretti.
        </p>
      </section>
    </Container>
  </main>
